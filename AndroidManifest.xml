<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mariolamontagne.happy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".AlarmService"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name=".Alarm" >
        </receiver>

        <activity
            android:name="com.mariolamontagne.happy.activities.EntryListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.mariolamontagne.happy.activities.EditHappyEntryActivity" >
            
        </activity>
        <activity android:name="com.mariolamontagne.happy.activities.CalendarActivity" >
            
        </activity>
        <activity android:name="com.mariolamontagne.happy.activities.DayListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>          
        </activity>
        <activity
            android:name="com.mariolamontagne.happy.activities.GraphActivity"
            android:label="@string/title_activity_graph" >            
        </activity>
    </application>

</manifest>
